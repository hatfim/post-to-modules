@import 'prism/themes/prism-okaidia.css'

section
  font-family: ff-tisa-pro, idot, times new roman, serif

blockquote, q
  quotes: none
  max-width:80%;

blockquote::before
    font-size: 3rem
    display: block
    height: 3rem
    margin-top: 1rem
    content: '“'

blockquote::after
    font-size: 3rem
    display: block
    height: 3rem
    margin-top: 1rem
    content: '”'

blockquote p
  font-size: 1.8rem;
  line-height: 1.2;

li
  font-family: didot, times new roman, serif
  font-style: italic

span a
  text-decoration:none
  font-size:1rem

h3.small
  font-size:1rem

.box
  clear:both;
  min-width:80%

.box > *
  margin-top: 0;
  width: 40%;
  float:left;
  
.box > * + *
  margin-left: 2rem;

.button-list
  text-align:center

.button
    font-size: 0.8rem;
    padding: 0.8rem 1rem 0.9rem;
    color: #fff;
    background: none;
    border-radius: 0.25rem;
    min-width: 9em;
    margin: 0.25rem;
    font-family: Avenir, Helvetica, Open Sans, Fira Sans, sans-serif

.submit
  color: #fff;
  background-color: hsla(210, 61%, 51%, 0.8);
  border: 1px solid hsla(210, 61%, 51%, 0.2);

.delete
  background-color: hsla(0, 61%, 51%, 0.8);
  border: 1px solid hsla(0, 61%, 51%, 0.2);
